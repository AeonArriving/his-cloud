<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lwy.his.dao.PatientForgetPasswordMapper">

    <select id="selectforgetpasswordinf" resultType="com.lwy.his.entity.patient.PatientUser" parameterType="java.util.concurrent.ConcurrentMap">

        select * from patientuser
        <where>

            <if test="username != null">
                puusername = #{username}
            </if>
            <if test="key == 'puphone'">
                and duphone = #{value}
            </if>
            <if test="key == 'pucard'">
                and ducard = #{value}
            </if>


        </where>


    </select>




</mapper>